<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myapp.rishabhrawat.womensafety.UserDataInsertLoginActivity">


    <TextView
        android:id="@+id/Addinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Add Details"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/nameedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/uname"
        android:drawablePadding="8dp"
        android:hint="Your Parents Name or Friends Name..."
        android:inputType="textPersonName"
        android:layout_above="@+id/phoneedit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/phoneedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/uphone"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Mobile Number ..."
        android:inputType="phone"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/mailedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/gmail"
        android:drawablePadding="8dp"
        android:inputType="textPersonName"
        android:hint="Gmail ID..."
        android:text=""
        android:layout_below="@+id/phoneedit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignBaseline="@+id/savebtn"
        android:layout_alignBottom="@+id/savebtn"
        android:layout_toLeftOf="@+id/image"
        android:layout_toStartOf="@+id/image"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <EditText
        android:id="@+id/edithome"
        android:layout_width="match_parent"
        android:hint="Your Parent or Friends Id.."
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/id"
        android:drawablePadding="8dp"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/mailedit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/contactname"
        android:layout_above="@+id/nameedit"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/idbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/savebtn"
        android:layout_alignBottom="@+id/savebtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Your ID.." />

</RelativeLayout>
